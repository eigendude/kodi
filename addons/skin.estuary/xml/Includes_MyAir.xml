<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="AirQualityIcon">
		<control type="group">
			<width>227</width>
			<height>100%</height>
			<align>center</align>
			<aligny>center</aligny>
			<visible>!String.IsEmpty($PARAM[label])</visible>
			<control type="image">
				<left>83</left>
				<width>60</width>
				<height>60</height>
				<texture colordiffuse="D0FFFFFF">$PARAM[texture]</texture>
			</control>
			<control type="textbox">
				<top>68</top>
				<width>227</width>
				<height>63</height>
				<font>font27_narrow</font>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[$PARAM[label]]</label>
			</control>
		</control>
	</include>
	<include name="AirQualityWidget">
		<definition>
			<control type="panel" id="$PARAM[list_id]">
				<left>0</left>
				<top>0</top>
				<right>0</right>
				<height>$PARAM[height]</height>
				<include content="WidgetListCommon">
					<param name="list_id" value="$PARAM[list_id]"/>
				</include>
				<visible>$PARAM[visible]</visible>
				<itemlayout width="$PARAM[width]" height="$PARAM[height]">
					<control type="group">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<right>0</right>
							<bottom>0</bottom>
							<texture>dialogs/dialog-bg-nobo.png</texture>
							<bordertexture border="21">overlays/shadow.png</bordertexture>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<left>50</left>
							<bottom>73</bottom>
							<width>130</width>
							<height>130</height>
							<texture>$INFO[ListItem.Icon]</texture>
						</control>
						<control type="textbox">
							<top>5</top>
							<bottom>190</bottom>
							<left>30</left>
							<right>30</right>
							<align>center</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<left>5</left>
							<right>5</right>
							<height>55</height>
							<bottom>10</bottom>
							<align>center</align>
							<label>$INFO[ListItem.Label2]</label>
							<font>font12</font>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="$PARAM[width]" height="$PARAM[height]">
					<control type="group">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<right>0</right>
							<bottom>0</bottom>
							<texture>dialogs/dialog-bg-nobo.png</texture>
							<bordertexture border="21">overlays/shadow.png</bordertexture>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<left>50</left>
							<bottom>73</bottom>
							<width>130</width>
							<height>130</height>
							<texture>$INFO[ListItem.Icon]</texture>
						</control>
						<control type="textbox">
							<top>10</top>
							<bottom>190</bottom>
							<left>30</left>
							<right>30</right>
							<align>center</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<left>5</left>
							<right>5</right>
							<height>55</height>
							<bottom>10</bottom>
							<align>center</align>
							<label>$INFO[ListItem.Label2]</label>
							<font>font12</font>
						</control>
					</control>
				</focusedlayout>
				<include>$PARAM[content_include]</include>
			</control>
		</definition>
	</include>
	<include name="PMItems">
		<content>
			<include content="PMItem">
				<param name="pm_index" value="0.3" />
			</include>
			<include content="PMItem">
				<param name="pm_index" value="0.5" />
			</include>
			<include content="PMItem">
				<param name="pm_index" value="0.7" />
			</include>
			<include content="PMItem">
				<param name="pm_index" value="1" />
			</include>
			<include content="PMItem">
				<param name="pm_index" value="1.5" />
			</include>
			<include content="PMItem">
				<param name="pm_index" value="2" />
			</include>
			<include content="PMItem">
				<param name="pm_index" value="2.5" />
			</include>
			<include content="PMItem">
				<param name="pm_index" value="10" />
			</include>
		</content>
	</include>
	<include name="PollutantItems">
		<content>
			<include content="PollutantItem">
				<param name="pollutant" value="CO2" />
			</include>
			<include content="PollutantItem">
				<param name="pollutant" value="CO" />
			</include>
			<include content="PollutantItem">
				<param name="pollutant" value="CH4" />
			</include>
			<include content="PollutantItem">
				<param name="pollutant" value="O3" />
			</include>
			<include content="PollutantItem">
				<param name="pollutant" value="BC" />
			</include>
			<include content="PollutantItem">
				<param name="pollutant" value="NO2" />
			</include>
			<include content="PollutantItem">
				<param name="pollutant" value="NO" />
			</include>
			<include content="PollutantItem">
				<param name="pollutant" value="VOC" />
			</include>
		</content>
	</include>
	<include name="PMItem">
		<item>
			<label>$INFO[Window(AirQuality).Property(PM$PARAM[pm_index].Label)]</label>
			<label2>$INFO[Window(AirQuality).Property(PM$PARAM[pm_index].Label2)]</label2>
			<thumb>resource://resource.images.airquality.default/PM$PARAM[pm_index].png</thumb>
			<onclick>noop</onclick>
			<visible>!String.IsEmpty(Window(AirQuality).Property(PM$PARAM[pm_index].IsVisible))</visible>
		</item>
	</include>
	<include name="PollutantItem">
		<item>
			<label>$INFO[Window(AirQuality).Property($PARAM[pollutant].Label)]</label>
			<label2>$INFO[Window(AirQuality).Property($PARAM[pollutant].Label2)]</label2>
			<thumb>resource://resource.images.airquality.default/$PARAM[pollutant].png</thumb>
			<onclick>noop</onclick>
			<visible>!String.IsEmpty(Window(AirQuality).Property($PARAM[pollutant].IsVisible))</visible>
		</item>
	</include>
</includes>
